{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@wassdahl/"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "rebaseWhen": "auto"
    }
  ],
  "updateInternalDeps": true
}
