{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@wassdahl/"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "rebaseWhen": "auto",
      "automergeType": "branch",
      "automergeStrategy": "squash"
    }
  ],
  "updateInternalDeps": true
}
