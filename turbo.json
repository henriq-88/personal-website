{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "lint": {},
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "SENDGRID_API_KEY",
    "VERCEL_URL",
    "VERCEL",
    "NODE_ENV",
    "NEXT_PUBLIC_GIT_HASH",
    "NEXT_PUBLIC_AXIOM_INGEST_ENDPOINT",
    "SKIP_ENV_VALIDATION"
  ]
}
